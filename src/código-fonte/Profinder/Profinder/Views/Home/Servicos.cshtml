
@{
    ViewData["Title"] = "Servicos";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/servicos.css">
    <link rel="stylesheet" href="../css/globals.css">
    <script defer src="../código-fonte/js/header.js"></script>
    <title>Serviços - ProFinder</title>
    <link rel="icon" href="/img/logo.png" type="image/x-icon">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="user-logged">
            <header class="header">
                <div class="logo-profinder-logged"><img src="~/img/logo.png" alt="Logo ProFinder"></div>
                <div class="nav-logged">
                    <a class="nav-link" href="@Url.Action("Index", "Home")"><li class="nav-li">Home</li></a>
                    <a class="nav-link" href="@Url.Action("Sobre", "Home")"><li class="nav-li">Sobre</li></a>
                    <a class="nav-link" href="@Url.Action("Servicos", "Home")"><li class="nav-li">Servicos</li></a>
                    <a class="nav-link" href="@Url.Action("FaleConosco", "Home")"><li class="nav-li">Fale Conosco</li></a>
                    <a class="nav-link" href=""><li class="nav-li">Profissionais</li></a>

                    <li id="user-dropdown">
                        <a class="account-drop" href="#">Minha Conta</a>
                        <ul id="user-menu" class="dropdown-content" style="display: none;">
                            <li class="toggle-options"><a class="account-li" href="@Url.Action("Edit", "Usuarios")">Perfil</a></li>
                            <li class="toggle-options"><a class="account-li" href="../código-fonte/area_minhas_contratacoes.html">Minhas contratações</a></li>
                            <li class="toggle-options"><a class="account-li" asp-area="" asp-controller="Usuarios" asp-action="Logout">Sair</a></li>
                        </ul>
                    </li>
                </div>
            </header>
        </div>
    }
    else
    {
        <div class="wrapper">

            <header class="header">
                <div class="logo-profinder"><a href="@Url.Action("Index", "Home")"><img class="img-header" src="~/img/logo.png" alt="Logo do site"></a></div>
                <div class="nav">
                    <a class="nav-link" href="@Url.Action("Index", "Home")"><li class="nav-li">Home</li></a>
                    <a class="nav-link" href="@Url.Action("Sobre", "Home")"><li class="nav-li">Sobre</li></a>
                    <a class="nav-link" href="@Url.Action("Servicos", "Home")"><li class="nav-li">Serviços</li></a>
                    <a class="nav-link" href="@Url.Action("FaleConosco", "Home")"><li class="nav-li">Fale Conosco</li></a>
                </div>

                <div class="login-area">
                    <div class="area-login">
                        <a href="@Url.Action("Login", "Usuarios")">
                            <button class="cta_btn_secondary spaces">Entrar</button>
                        </a>
                        <a href="@Url.Action("Create", "Usuarios")" class="cta_btn_primary spaces">Criar Conta</a>

                    </div>
                </div>
            </header>
        </div>
    }
    <!-- FIM AREA DO HEADER-->
    <!--AREA DOS TEXTOS-->
    <article class="services">
        <p class="title">Serviços</p>
    </article>

    <div class="texts">
        <div class="text-prof">
            <div class="text-wrapper1">
                <div class="text-1">
                    <p class="profissionais-titulo"><span class="profissionais-span">Profissionais</span> no ProFinder</p>
                    <p class="profissionais-texto">
                        É <span class="cuidadores-span">cuidador de idosos</span>  ou <span class="cuidadores-span">
                            cuidador de pessoas com  deficiência?
                        </span>
                        Nosso site permite que cadastrem-se e disponham de seus serviços. Você poderá informar suas experiências,
                        conhecimentos, especializações, agendar os seus atendimentos, gerir os seus pacientes,
                        registrar os cuidados realizados, receber pagamentos e muito mais.
                    </p>
                </div>
            </div>
            <div class="img-prof">
                <img class="profissionais-imagens" id="servicos-imagens" src="../img/profissionais_profinder.png">
            </div>
        </div>

        <div class="text-user">
            <div class="img-user">
                <img class="usuarios-imagens" id="servicos-imagens" src="../img/usuarios_profinder.png">
            </div>
            <div class="text-wrapper2">
                <div class="text-2">
                    <p class="usuarios-titulo"><span class="usuarios-span">Usuários</span> no ProFinder</p>
                    <p class="usuarios-texto">
                        Está em busca de um <span class="cuidadores-span">cuidador de idosos</span> ou
                        <span class="cuidadores-span">cuidador de pessoas com deficiência?</span>  Aqui no ProFinder você poderá encontrar
                        esses profissionais a partir de suas experiências, especializações, avaliações de outros usuários,
                        gerir suas contratações, fazer o pagamento pela plataforma de forma segura e rápida, extrair relatórios de
                        atendimentos e muito mais.
                    </p>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--FIM AREA DOS TEXTOS-->
    <!--AREA DO FOOTER-->
    <footer>
        <p class="footer-obj">ACESSIBILIDADE</p>
        <p class="footer-obj">TERMOS E CONDIÇÕES DO SITE</p>
        <p class="footer-obj">PRIVACIDADE</p>
        <p class="footer-text">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Odio consectetur fugiat
            illum odit. Asperiores sapiente id nostrum maiores odio nam. Rem totam quos mollitia!
        </p>
    </footer>
    <!--FIM AREA DO FOOTER-->
    </div>
</body>
</html>

