@model IEnumerable<Profinder.Models.Contratacao>

@{
    ViewData["Title"] = "Solicitações de Agendamento";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/globals.css">
    <link rel="stylesheet" href="~/css/solicitacoes.css">
    <title>ProFinder - Solicitações de Agendamento</title>
</head>
<body>
    <header>
        <div class="container-navegation">
            <a href="@Url.Action("Index", "Home")"><img class="img-header" src="~/img/logo.png" alt="Logo do site"></a>
            <div class="list-menu">
                <li>Solicitações Pendentes</li>
            </div>
            <a href="@Url.Action("AreaProfissionais", "Usuarios")" style="margin-right: 5%; text-decoration: none;"><span>Voltar</span></a>
        </div>
    </header>
    <div class="line-style-top"></div>

    <div class="container-geral">
        <h2>Solicitações Pendentes</h2>
        <table>
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Detalhes do Paciente</th>
                    <th>Data de Início</th>
                    <th>Data de Fim</th>
                    <th>Hora de Início</th>
                    <th>Hora de Fim</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var solicitacao in Model)
                {
                    <tr>
                        <td>
                            @if (solicitacao.Cliente != null)
                            {
                                <p><strong>Cliente:</strong> @solicitacao.Cliente.NomeUsuario</p>
                            }
                            else
                            {
                                <p><strong>Cliente:</strong> Não disponível</p>
                            }
                        </td>
                        <td>@solicitacao.DetalhesPaciente</td>
                        <td>@solicitacao.DataInicio.ToString("dd/MM/yyyy")</td>
                        <td>@solicitacao.DataFim.ToString("dd/MM/yyyy")</td>
                        <td>@solicitacao.HoraInicio</td>
                        <td>@solicitacao.HoraFim</td>
                        <td>
                            <!-- Botões para aceitar ou recusar a solicitação -->
                            <form method="post" action="@Url.Action("ResponderSolicitacao", "Contratacao")">
                                <input type="hidden" name="contratacaoId" value="@solicitacao.Id" />
                                <button type="submit" name="resposta" value="Aceitar">Aceitar</button>
                                <button type="submit" name="resposta" value="Recusar">Recusar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <footer>
        <p class="footer-obj">ACESSIBILIDADE</p>
        <p class="footer-obj">TERMOS E CONDIÇÕES DO SITE</p>
        <p class="footer-obj">PRIVACIDADE</p>
        <p class="footer-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Odio consectetur fugiat illum odit. Asperiores sapiente id nostrum maiores odio nam. Rem totam quos mollitia!</p>
    </footer>
</body>
</html>
