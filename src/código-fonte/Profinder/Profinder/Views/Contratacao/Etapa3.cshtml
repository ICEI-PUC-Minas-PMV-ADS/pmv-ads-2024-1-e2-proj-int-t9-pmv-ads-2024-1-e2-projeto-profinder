@model Etapa3ViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/area_profissionais.css">
    <link rel="stylesheet" href="~/css/etapa_1.css">
    <link rel="stylesheet" href="/css/globals.css">
    <link rel="stylesheet" href="~/css/contratacao.css">
    <script defer src="/js/etapa1.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
          integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>ProFinder - Análise do agendamento</title>
</head>

<body>
    <header>
        <div class="container-navegation">
            <a href="@Url.Action("Index", "Home")">
                <img class="img-header" src="/img/logo.png" alt="Logo do site">
            </a>
            <div class="list-menu-etapa">
                <li>Solicitar agendamento </li>
                <span id="line"></span>
                <li>Análise do agendamento</li>
                <span id="line-3"></span>
                <li id="step-2">Conclusão</li>
            </div>
            <a href="@Url.Action("Index", "Home")" style="margin-right: 5%; text-decoration: none;"><span>Voltar</span></a>
        </div>
    </header>
    <div class="line-style-top"></div>

    <div class="icon-text">
        <i class="fa-regular fa-circle-check" style="margin-right: 10px; margin-bottom: 10px; color: #ffd600; font-size: 40px;"></i>
        <h6> Etapa de Análise do Agendamento</h6><span class="info-icon">i</span>
        <div class="info-bubble">Nesta etapa você pode revisar e escolher como pagar o profissional.</div>
        <div id="error-message" class="error-message">
            <span>Por favor, preencha todos os campos obrigatórios!</span>
            <div id="progress-bar" class="progress-bar"></div>
            <div id="error-timer" class="error-timer"></div>
        </div>
    </div>

    <div class="professional_data column">
        <div class="flex" style="flex-direction: column; max-height: 600px; height: 100%; justify-content: space-between;">
            <h6 class="title-right" style="margin-bottom: 10px;">Confirme os dados do agendamento e pagamento</h6>
            <div class="conclusion_inputs">
                <label for="name_professional">1. Nome do profissional contratado:</label>
                <input type="text" id="name_professional" value="@Model.NomeProfissional" readonly>

                <label for="date_hour_service">2. Data e hora em que o serviço será prestado:</label>
                <input type="text" id="date_hour_service" value="@Model.DataHoraServico" readonly>

                <label for="address_service">3. Endereço onde o serviço será prestado:</label>
                <input type="text" id="address_service" value="@Model.EnderecoCliente" readonly>

                <label for="service_value">4. Valor do serviço:</label>
                <input type="text" id="service_value" value="@Model.ValorPago.ToString("C")" readonly>

                <label for="payment_method">5. Como você deseja pagar?</label>

                <!-- ÁREA DE TESTE-->

                <form method="post" action="@Url.Action("ProcessarPagamento", "Contratacao")">
                    <input type="hidden" name="ContratacaoId" value="@ViewBag.ContratacaoId" />

                    <div class="payment_methods">
                        <div class="payment_text">
                            <p style="color: #ffd600;">Cartão de crédito</p>
                            <p class="small" style="color: #ccc;">Pague à vista ou em até 12x sem juros</p>
                            <p style="color: #ffd600;">A partir de R$00,00</p>
                        </div>
                        <a href="#"><i class="fa-solid fa-arrow-right"></i></a>
                    </div>
                    <div class="avanced">
                        <button type="submit" class="cta_btn_primary">Avançar</button>
                    </div>
                </form>
                <!-- ÁREA DE TESTE-->

            </div>
        </div>
    </div>

    <footer id="home-footer">
        <div class="copy">
            <img src="~/img/logo.png" alt="">
            <p>&copy; 2024 ProFinder. Todos os direitos reservados.</p>
        </div>
    </footer>
</body>

</html>
