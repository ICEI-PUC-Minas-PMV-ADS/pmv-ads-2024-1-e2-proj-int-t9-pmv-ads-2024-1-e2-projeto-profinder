@model Profinder.Models.Usuario

@{
    ViewData["Title"] = "Alterar dados do usuário";
}

<h1>Edit</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="AlterarSenha" method="post">



            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroResidencia" class="control-label"></label>
                <input asp-for="NumeroResidencia" class="form-control" />
                <span asp-validation-for="NumeroResidencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>


            @if (User.IsInRole("Cliente"))
            {
                <div class="form-group">
                    <label asp-for="NecessidadesEspecificas" class="control-label"></label>
                    <input asp-for="NecessidadesEspecificas" class="form-control" />
                    <span asp-validation-for="NecessidadesEspecificas" class="text-danger"></span>
                </div>
            }
            else if (User.IsInRole("Profissional"))
            {
                <div class="form-group">
                    <label asp-for="Habilidades" class="control-label"></label>
                    <input asp-for="Habilidades" class="form-control" />
                    <span asp-validation-for="Habilidades" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Formacao" class="control-label"></label>
                    <input asp-for="Formacao" class="form-control" />
                    <span asp-validation-for="Formacao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Experiencia" class="control-label"></label>
                    <input asp-for="Experiencia" class="form-control" />
                    <span asp-validation-for="Experiencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrecoServico" class="control-label"></label>
                    <input asp-for="PrecoServico" class="form-control" />
                    <span asp-validation-for="PrecoServico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
            }

            <input type="hidden" asp-for="Perfil" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

